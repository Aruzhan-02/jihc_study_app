<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#239ca2"
    android:orientation="vertical"
    tools:context=".authentication.SplashScrenn"
    >

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="247dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/jihcc"
        android:transitionName="logo_image"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="48dp"
        android:text="JIHC Study"
        android:layout_marginTop="30dp"
        android:transitionName="logo_text"
        android:fontFamily="@font/notosans_bold"
        android:includeFontPadding="false"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/notosans_light"
        android:text="Study helper during online education "
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16dp" />


</LinearLayout>