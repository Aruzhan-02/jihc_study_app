<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.jihc_study.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/ivDayDetail"
            android:layout_margin="8dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDayDetail"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:text="Subjects"
            android:layout_toRightOf="@id/ivDayDetail"
            android:fontFamily="@font/notosans_bold"
            android:includeFontPadding="false"
            android:textSize="24dp"/>


        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:id="@+id/tvDescription"-->
        <!--            android:layout_below="@id/ivWeek"-->
        <!--            android:layout_toRightOf="@id/ivWeek"-->
        <!--            android:textSize="16dp"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTimeDetail"
            android:text="Time"
            android:layout_alignBottom="@id/ivDayDetail"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:fontFamily="@font/notosans_regular"
            android:includeFontPadding="false"
            android:textSize="16dp"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>